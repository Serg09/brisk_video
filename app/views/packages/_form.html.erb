<%= form_for(@package, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @package.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@package.errors.count, "error") %> prohibited this package from being saved:</h4>

      <ul>
      <% @package.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :hours, "Hours Total", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :hours, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :first_videographer, "First Videographer", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :first_videographer, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :first_videographer_hours, "First Videographer (hours)", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :first_videographer_hours, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :second_videographer, "Second Videographer", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :second_videographer, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :second_videographer_hours, "Second Videographer (hours)", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :second_videographer_hours, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :highlight_video, "Highlight Video", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :highlight_video, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :documentary_edit, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :documentary_edit, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :published_dvds, "Published DVD’s", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :published_dvds, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :published_bds, "Published BD’s", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :published_bds, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :over_eight_hours, "Over 8 hours % discount", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :over_eight_hours, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :over_ten_hours, "Over 10 hours % discount", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :over_ten_hours, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
