<div class="page-header">
  <%= link_to new_package_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Package
  <% end %>
  <h1>Listing packages</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th><p class="text-center">Hours Total</p></th>
            <th><p class="text-center">First Videographer</p></th>
            <th><p class="text-center">First Videographer (hours)</p></th>
            <th><p class="text-center">Second Videographer</p></th>
            <th><p class="text-center">Second Videographer (hours)</p></th>
            <th><p class="text-center">Highlight Video</p></th>
            <th><p class="text-center">Documentary Edit</p></th>
            <th><p class="text-center">Published DVD's</p></th>
            <th><p class="text-center">Published BD's</p></th>
            <th><p class="text-center">Over 8 hours % discount</p></th>
            <th><p class="text-center">Over 10 hours % discount</p></th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @packages) do |package| %>
            <td><p class="text-center"><%= package.hours %></p></td>
            <td><p class="text-center"><%= package.first_videographer %></p></td>
            <td><%= package.first_videographer_hours %></p></td>
            <td><p class="text-center"><%= package.second_videographer %></p></td>
            <td><p class="text-center"><%= package.second_videographer_hours %></p></td>
            <td><p class="text-center"><%= package.highlight_video %></p></td>
            <td><p class="text-center"><%= package.documentary_edit %></p></td>
            <td><p class="text-center"><%= package.published_dvds %></p></td>
            <td><p class="text-center"><%= package.published_bds %></p></td>
            <td><p class="text-center"><%= package.over_eight_hours %></p></td>
            <td><p class="text-center"><%= package.over_ten_hours %></p></td>
            <td><p class="text-center"><%= link_to 'Show', package, class: 'btn btn-success' %></td>
        <td><%= link_to 'Edit', edit_package_path(package), class: 'btn btn-info' %></td>
        <td><%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      <% end %>
    </tbody>
  </table>
</div>
